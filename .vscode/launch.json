    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Recurse *.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test.py",
            "args": ["--recurse-so-directory", ".", "--so-pattern", "*.py"],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: -h",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test.py",
            "args": ["-h"],
            "console": "integratedTerminal"
        }
    ]
}